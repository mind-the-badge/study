{
  "$schema": "https://raw.githubusercontent.com/revisit-studies/study/v2.1.1/src/parser/StudyConfigSchema.json",
  "studyMetadata": {
    "title": "Experiment 1 - Visualization Badges",
    "version": "1.0.0",
    "authors": [
      "Your Name"
    ],
    "date": "2025-01-28",
    "description": "A study examining visualization badges.",
    "organizations": [
      "Your Organization"
    ]
  },
  "uiConfig": {
    "contactEmail": "contact@yourstudy.com",
    "helpTextPath": "experiment-1-visualization-badges/assets/help.md",
    "logoPath": "revisitAssets/revisitLogoSquare.svg",
    "withProgressBar": true,
    "autoDownloadStudy": false,
    "sidebar": true,
    "studyEndMsg": "Thank you for participating!"
  },
  "baseComponents": {
    "stimuliWithBadge": {
      "description": "A visualization with a badge overlay.",
      "type": "react-component",
      "path": "experiment-1-visualization-badges/assets/StimuliWithBadge.tsx",
      "nextButtonLocation": "sidebar",
      "instructionLocation": "sidebar",
      "response": []
    },
    "stimuliWithMultipleBadges": {
      "description": "A visualization with multiple badges overlay.",
      "type": "react-component",
      "path": "experiment-1-visualization-badges/assets/StimuliWithMultipleBadges.tsx",
      "nextButtonLocation": "sidebar",
      "instructionLocation": "sidebar",
      "response": []
    }
  },
  "components": {
    "introduction": {
      "type": "markdown",
      "path": "experiment-1-visualization-badges/assets/introduction.md",
      "response": []
    },
    "consent": {
      "type": "markdown",
      "path": "experiment-1-visualization-badges/assets/consent.md",
      "response": []
    },
    "condition-1-task": {
      "baseComponent": "stimuliWithBadge",
      "instruction": "Please examine the visualization below and answer the following questions about the data shown. Focus on the information presented in the chart.",
      "response": [
        {
          "id": "task-question-2",
          "prompt": "Which category has the highest value?",
          "location": "sidebar",
          "type": "radio",
          "options": [
            "Category A",
            "Category B",
            "Category C",
            "Category D"
          ]
        }
      ]
    },
    "condition-1-badge-awareness": {
      "type": "questionnaire",
      "instruction": "Answer questions",
      "response": [
        {
          "id": "badge-noticed",
          "prompt": "Did you notice the blue label with rounded corners at the bottom right of the visualization?",
          "type": "radio",
          "options": [
            "Yes, I noticed it",
            "No, I did not notice it",
            "I'm not sure"
          ]
        },
        {
          "id": "badge-description",
          "prompt": "Did you understand its meaing?? Explain in your own words.",
          "type": "longText"
        }
      ]
    },
    "badge-onboarding": {
      "type": "markdown",
      "path": "experiment-1-visualization-badges/assets/badge-onboarding.md",
      "response": []
    },
    "condition-2-multiple-badges": {
      "baseComponent": "stimuliWithMultipleBadges",
      "instruction": "Please examine this visualization and answer the questions about it and the badges.",
      "response": [
        {
          "id": "trust-visualization",
          "prompt": "I trust this visualization*",
          "location": "sidebar",
          "type": "slider",
          "options": [
            {
              "label": "1 - Not at all",
              "value": 1
            },
            {
              "label": "5 - Somewhat",
              "value": 5
            },
            {
              "label": "10 - Completely",
              "value": 10
            }
          ],
          "startingValue": 5
        },
        {
          "id": "understand-visualization",
          "prompt": "I understand this visualization*",
          "location": "sidebar",
          "type": "slider",
          "options": [
            {
              "label": "1 - Not at all",
              "value": 1
            },
            {
              "label": "5 - Somewhat",
              "value": 5
            },
            {
              "label": "10 - Completely",
              "value": 10
            }
          ],
          "startingValue": 5
        },
        {
          "id": "badges-helping",
          "prompt": "Are the visualization badges helping you?",
          "location": "sidebar",
          "type": "longText"
        }
      ]
    }
  },
  "sequence": {
    "order": "fixed",
    "components": [
      "introduction",
      "consent",
      "condition-1-task",
      "condition-1-badge-awareness",
      "badge-onboarding",
      "condition-2-multiple-badges"
    ]
  }
}
